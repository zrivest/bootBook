<div class="user_splash">
<% if current_user == @user %>
<h1>Hey there, <%= @user.first_name %>!</h1>
<% end %>
<div class="profile_user">
  <% @user = User.find(params[:id]) %>
<%= render 'user_profile' %>
</div><br>
<% if current_user == @user %>
<div class="profile_options">
<%= link_to "Edit your Profile", edit_user_path(current_user), :id => 'edit-profile' %> |
<%= link_to "Deauthorize your Account", user_path(current_user), :method=>:delete, data: { confirm: "Are you sure? This is permanent" } %> |
<% end %>
<%= link_to "Log out", logout_path %>
</div>
</div>
<%= render 'pending_friend_requests' %>
<%= render 'user_status_feed' %>
